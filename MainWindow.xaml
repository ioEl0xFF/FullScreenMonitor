<Window x:Class="FullScreenMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FullScreenMonitor"
        xmlns:constants="clr-namespace:FullScreenMonitor.Constants;assembly=FullScreenMonitor"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="FullScreenMonitor"
        Height="{x:Static constants:WindowConstants.HiddenWindowSize}" 
        Width="{x:Static constants:WindowConstants.HiddenWindowSize}"
        WindowStyle="None"
        ShowInTaskbar="False"
        Visibility="Hidden"
        ResizeMode="NoResize"
        WindowState="Minimized">
    <!-- システムトレイ常駐用の隠しウィンドウ -->
    <Grid>
        <!-- このウィンドウは表示されないため、コンテンツは空 -->
    </Grid>
</Window>
