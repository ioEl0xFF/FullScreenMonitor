<Window x:Class="FullScreenMonitor.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FullScreenMonitor - 設定" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 監視対象プロセス -->
        <GroupBox Grid.Row="0" Header="監視対象プロセス" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- プロセス名入力 -->
                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                    <!-- 現在稼働中のプロセス選択 -->
                    <Grid Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" 
                               Content="実行中プロセス:" 
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                        <ComboBox x:Name="RunningProcessComboBox"
                                  Grid.Column="1"
                                  ItemsSource="{Binding RunningProcesses}"
                                  DisplayMemberPath="DisplayName"
                                  SelectedValuePath="ProcessName"
                                  Height="25"
                                  IsEditable="False"
                                  SelectionChanged="RunningProcessComboBox_SelectionChanged"/>
                    </Grid>
                    
                    <!-- 手動入力 -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" 
                               Content="プロセス名:" 
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"/>
                        <TextBox x:Name="ProcessNameTextBox" 
                                 Grid.Column="1"
                                 Text="{Binding NewProcessName, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,5,0"
                                 Height="25"/>
                        <Button Grid.Column="2" 
                                Content="追加" 
                                Click="AddProcess_Click"
                                Width="60"
                                Height="25"/>
                    </Grid>
                </StackPanel>
                
                <!-- プロセス一覧 -->
                <ListBox x:Name="ProcessListBox" 
                         Grid.Row="1"
                         ItemsSource="{Binding TargetProcesses}"
                         Height="120"
                         Margin="0,0,0,10"/>
                
                <!-- 削除ボタン -->
                <Button Grid.Row="2" 
                        Content="選択項目を削除" 
                        Click="RemoveProcess_Click"
                        Height="25"
                        VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>

        <!-- 監視間隔 -->
        <GroupBox Grid.Row="1" Header="監視間隔" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Slider Grid.Column="0" 
                        x:Name="IntervalSlider"
                        Value="{Binding MonitorInterval}"
                        Minimum="100" 
                        Maximum="2000" 
                        TickFrequency="100"
                        IsSnapToTickEnabled="True"
                        Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1" 
                           Text="{Binding MonitorInterval, StringFormat={}{0}ms}"
                           VerticalAlignment="Center"
                           Width="50"/>
            </Grid>
        </GroupBox>

        <!-- スタートアップ設定 -->
        <GroupBox Grid.Row="2" Header="スタートアップ設定" Margin="0,0,0,15">
            <CheckBox x:Name="StartupCheckBox"
                      Content="Windows起動時に自動でアプリを開始"
                      IsChecked="{Binding StartWithWindows}"
                      Margin="10"/>
        </GroupBox>

        <!-- 状態表示 -->
        <GroupBox Grid.Row="3" Header="アプリケーション状態" Margin="0,0,0,15">
            <StackPanel Margin="10">
                <TextBlock x:Name="StatusTextBlock" 
                           Text="監視中..."
                           Foreground="Green"/>
                <TextBlock x:Name="LastCheckTextBlock" 
                           Text="最終チェック: --"
                           Margin="0,5,0,0"
                           FontSize="10"/>
            </StackPanel>
        </GroupBox>

        <!-- ボタン -->
        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="保存" 
                    Click="Save_Click"
                    Width="80" 
                    Height="30" 
                    Margin="0,0,10,0"/>
            <Button Content="キャンセル" 
                    Click="Cancel_Click"
                    Width="80" 
                    Height="30"/>
        </StackPanel>
    </Grid>
</Window>

