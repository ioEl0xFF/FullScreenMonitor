<Window x:Class="FullScreenMonitor.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FullScreenMonitor"
        Title="FullScreenMonitor - 設定"
        Height="{x:Static local:WindowConstants.SettingsWindowHeight}"
        Width="{x:Static local:WindowConstants.SettingsWindowWidth}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- モダンなスタイル定義 -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="{x:Static local:WindowConstants.SettingsWindowMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 監視対象プロセス -->
        <GroupBox Grid.Row="0" Header="監視対象プロセス" Margin="0,0,0,{x:Static local:WindowConstants.GroupBoxMargin}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- プロセス名入力 -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Margin="0,0,5,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="ProcessComboBox"
                                  Grid.Column="0"
                                  Text="{Binding NewProcessName, UpdateSourceTrigger=PropertyChanged}"
                                  ItemsSource="{Binding RunningProcesses}"
                                  DisplayMemberPath="DisplayText"
                                  IsEditable="True"
                                  Margin="0,0,5,0"
                                  Height="{x:Static local:WindowConstants.ComboBoxHeight}"
                                  Style="{StaticResource ModernTextBox}"
                                  SelectionChanged="ProcessComboBox_SelectionChanged"/>
                        <Button Grid.Column="1"
                                Content="🔄"
                                ToolTip="プロセス一覧を更新"
                                Click="RefreshProcesses_Click"
                                Width="{x:Static local:WindowConstants.RefreshButtonSize}"
                                Height="{x:Static local:WindowConstants.RefreshButtonSize}"
                                Style="{StaticResource ModernButton}"/>
                    </Grid>
                    <Button Grid.Column="2"
                            Content="追加"
                            Click="AddProcess_Click"
                            Width="60"
                            Height="{x:Static local:WindowConstants.StandardButtonHeight}"
                            Style="{StaticResource ModernButton}"/>
                </Grid>

                <!-- プロセス一覧 -->
                <ListBox x:Name="ProcessListBox"
                         Grid.Row="1"
                         ItemsSource="{Binding TargetProcesses}"
                         SelectionMode="Extended"
                         Height="{x:Static local:WindowConstants.ProcessListHeight}"
                         Margin="0,0,0,10"
                         BorderBrush="#FFCCCCCC"
                         BorderThickness="1"/>

                <!-- 削除ボタン -->
                <Button Grid.Row="2"
                        Content="選択項目を削除"
                        Click="RemoveProcess_Click"
                        ToolTip="Ctrl+クリックで複数選択可能"
                        Height="{x:Static local:WindowConstants.StandardButtonHeight}"
                        VerticalAlignment="Top"
                        Style="{StaticResource ModernButton}"/>
            </Grid>
        </GroupBox>

        <!-- 監視間隔 -->
        <GroupBox Grid.Row="1" Header="監視間隔" Margin="0,0,0,{x:Static local:WindowConstants.GroupBoxMargin}">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Slider Grid.Column="0"
                        x:Name="IntervalSlider"
                        Value="{Binding MonitorInterval}"
                        Minimum="{x:Static local:MonitorConstants.MinMonitorInterval}"
                        Maximum="{x:Static local:MonitorConstants.MaxMonitorInterval}"
                        TickFrequency="{x:Static local:MonitorConstants.MonitorIntervalTickFrequency}"
                        IsSnapToTickEnabled="True"
                        Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1"
                           Text="{Binding MonitorInterval, StringFormat={}{0}ms}"
                           VerticalAlignment="Center"
                           Width="50"/>
            </Grid>
        </GroupBox>

        <!-- スタートアップ設定 -->
        <GroupBox Grid.Row="2" Header="スタートアップ設定" Margin="0,0,0,{x:Static local:WindowConstants.GroupBoxMargin}">
            <CheckBox x:Name="StartupCheckBox"
                      Content="Windows起動時に自動でアプリを開始"
                      IsChecked="{Binding StartWithWindows}"
                      Margin="10"
                      FontSize="12"/>
        </GroupBox>

        <!-- 状態表示 -->
        <GroupBox Grid.Row="3" Header="アプリケーション状態" Margin="0,0,0,{x:Static local:WindowConstants.GroupBoxMargin}">
            <StackPanel Margin="10">
                <TextBlock x:Name="StatusTextBlock"
                           Text="監視中..."
                           Foreground="#FF107C10"
                           FontWeight="Bold"/>
                <TextBlock x:Name="LastCheckTextBlock"
                           Text="最終チェック: --"
                           Margin="0,5,0,0"
                           FontSize="10"
                           Foreground="#FF666666"/>
            </StackPanel>
        </GroupBox>

        <!-- ボタン -->
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="閉じる"
                    Click="Close_Click"
                    Width="{x:Static local:WindowConstants.StandardButtonWidth}"
                    Height="{x:Static local:WindowConstants.StandardButtonHeight}"
                    Style="{StaticResource ModernButton}"/>
        </StackPanel>
    </Grid>
</Window>

