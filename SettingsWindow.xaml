<Window x:Class="FullScreenMonitor.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FullScreenMonitor"
        xmlns:constants="clr-namespace:FullScreenMonitor.Constants;assembly=FullScreenMonitor"
        Title="FullScreenMonitor - 設定"
        Height="{x:Static constants:WindowConstants.SettingsWindowHeight}"
        Width="{x:Static constants:WindowConstants.SettingsWindowWidth}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- GroupBoxヘッダースタイル -->
        <Style x:Key="ModernGroupBoxHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF2D2D30"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- セクション別GroupBoxスタイル -->
        <Style x:Key="ProcessGroupBox" TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderBrush" Value="#FFE1E1E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="32"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0"
                                    Background="#FF0078D4"
                                    CornerRadius="4,4,0,0">
                                <TextBlock Text="{TemplateBinding Header}"
                                           Style="{StaticResource ModernGroupBoxHeader}"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="12,0,0,0"/>
                            </Border>
                            <Border Grid.Row="1"
                                    Background="#FFF8F8F8"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="0,0,4,4">
                                <ContentPresenter/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SettingsGroupBox" TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderBrush" Value="#FFE1E1E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="32"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0"
                                    Background="#FF28A745"
                                    CornerRadius="4,4,0,0">
                                <TextBlock Text="{TemplateBinding Header}"
                                           Style="{StaticResource ModernGroupBoxHeader}"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="12,0,0,0"/>
                            </Border>
                            <Border Grid.Row="1"
                                    Background="#FFF8F8F8"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="0,0,4,4">
                                <ContentPresenter/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatusGroupBox" TargetType="GroupBox">
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="BorderBrush" Value="#FFE1E1E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="32"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0"
                                    Background="#FF6C757D"
                                    CornerRadius="4,4,0,0">
                                <TextBlock Text="{TemplateBinding Header}"
                                           Style="{StaticResource ModernGroupBoxHeader}"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           Margin="12,0,0,0"/>
                            </Border>
                            <Border Grid.Row="1"
                                    Background="#FFF8F8F8"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="0,0,4,4">
                                <ContentPresenter/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- モダンなスタイル定義 -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF106EBE"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF005A9E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#FF0078D4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 監視対象プロセス -->
        <GroupBox Grid.Row="0" Header="監視対象プロセス" Style="{StaticResource ProcessGroupBox}">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- プロセス名入力 -->
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Margin="0,0,5,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="ProcessComboBox"
                                  Grid.Column="0"
                                  Text="{Binding NewProcessName, UpdateSourceTrigger=PropertyChanged}"
                                  ItemsSource="{Binding RunningProcesses}"
                                  DisplayMemberPath="DisplayText"
                                  IsEditable="True"
                                  Margin="0,0,5,0"
                                  Height="25"
                                  SelectionChanged="ProcessComboBox_SelectionChanged">
                            <ComboBox.ToolTip>
                                <ToolTip>
                                    <StackPanel>
                                        <TextBlock Text="プロセス名を入力してください"/>
                                        <TextBlock Text="例: notepad, chrome, explorer"/>
                                        <TextBlock Text="Enterキーで追加、Escキーで閉じる"/>
                                    </StackPanel>
                                </ToolTip>
                            </ComboBox.ToolTip>
                        </ComboBox>
                        <Button Grid.Column="1"
                                Content="更新"
                                ToolTip="プロセス一覧を更新"
                                Click="RefreshProcesses_Click"
                                Width="50"
                                Height="25"
                                FontSize="10"
                                Style="{StaticResource ModernButton}"/>
                    </Grid>
                    <Button Grid.Column="2"
                            Content="追加"
                            Click="AddProcess_Click"
                            Width="60"
                            Height="25"
                            Style="{StaticResource ModernButton}"/>
                </Grid>

                <!-- プロセス一覧 -->
                <ListBox x:Name="ProcessListBox"
                         Grid.Row="1"
                         ItemsSource="{Binding TargetProcesses}"
                         SelectionMode="Extended"
                         Height="120"
                         VerticalAlignment="Top"
                         Margin="0,0,0,10"
                         BorderBrush="#FFCCCCCC"
                         BorderThickness="1">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- プロセス名 -->
                                <TextBlock Grid.Column="0"
                                           Text="{Binding DisplayName}"
                                           VerticalAlignment="Center"
                                           Margin="5,0,0,0"/>

                                <!-- 実行中バッジ -->
                                <Border Grid.Column="1"
                                        Background="#FF4CAF50"
                                        CornerRadius="8"
                                        Padding="6,2"
                                        Margin="5,0,5,0"
                                        VerticalAlignment="Center">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="実行中"
                                               Foreground="White"
                                               FontSize="9"
                                               FontWeight="Bold"/>
                                </Border>

                                <!-- 個別削除ボタン -->
                                <Button Grid.Column="2"
                                        Content="×"
                                        Width="20"
                                        Height="20"
                                        FontSize="12"
                                        FontWeight="Bold"
                                        Background="#FFFF5722"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Click="RemoveIndividualProcess_Click"
                                        ToolTip="このプロセスを削除"
                                        Margin="5,0,5,0">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}"
                                                                CornerRadius="10"
                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                BorderBrush="{TemplateBinding BorderBrush}">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                            VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#FFE64A19"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- 削除ボタン -->
                <Button Grid.Row="2"
                        Content="選択項目を削除"
                        Click="RemoveProcess_Click"
                        ToolTip="Ctrl+クリックで複数選択可能"
                        Height="25"
                        VerticalAlignment="Top"
                        Style="{StaticResource ModernButton}"/>
            </Grid>
        </GroupBox>

        <!-- 監視間隔 -->
        <GroupBox Grid.Row="1" Header="監視間隔" Style="{StaticResource SettingsGroupBox}">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Slider Grid.Column="0"
                        x:Name="IntervalSlider"
                        Value="{Binding MonitorInterval}"
                        Minimum="100"
                        Maximum="2000"
                        TickFrequency="100"
                        IsSnapToTickEnabled="True"
                        Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1"
                           Text="{Binding MonitorInterval, StringFormat={}{0}ms}"
                           VerticalAlignment="Center"
                           Width="50"/>
            </Grid>
        </GroupBox>

        <!-- スタートアップ設定 -->
        <GroupBox Grid.Row="2" Header="スタートアップ設定" Style="{StaticResource SettingsGroupBox}">
            <CheckBox x:Name="StartupCheckBox"
                      Content="Windows起動時に自動でアプリを開始"
                      IsChecked="{Binding StartWithWindows}"
                      Margin="10"
                      FontSize="12"/>
        </GroupBox>

        <!-- ウィンドウ復元設定 -->
        <GroupBox Grid.Row="3" Header="ウィンドウ復元設定" Style="{StaticResource SettingsGroupBox}">
            <StackPanel Margin="10">
                <CheckBox x:Name="RestoreOnSettingsClosedCheckBox"
                          Content="設定画面を閉じた時に最小化されたウィンドウを復元"
                          IsChecked="{Binding RestoreOnSettingsClosed}"
                          Margin="0,0,0,5"
                          FontSize="12"/>
                <CheckBox x:Name="RestoreOnAppExitCheckBox"
                          Content="ソフト終了時に最小化されたウィンドウを復元"
                          IsChecked="{Binding RestoreOnAppExit}"
                          FontSize="12"/>
            </StackPanel>
        </GroupBox>

        <!-- 状態表示 -->
        <GroupBox Grid.Row="6" Header="アプリケーション状態" Style="{StaticResource StatusGroupBox}">
            <StackPanel Margin="10" MinHeight="100">
                <TextBlock x:Name="StatusTextBlock"
                           Text="監視中..."
                           Foreground="#FF107C10"
                           FontWeight="Bold"/>
                <TextBlock x:Name="LastCheckTextBlock"
                           Text="最終チェック: --"
                           Margin="0,5,0,0"
                           FontSize="10"
                           Foreground="#FF666666"/>
                <TextBlock x:Name="MinimizedWindowCountTextBlock"
                           Text="最小化ウィンドウ: 0個"
                           Margin="0,5,0,0"
                           FontSize="10"
                           Foreground="#FF666666"/>
                <TextBlock x:Name="TargetProcessCountTextBlock"
                           Text="対象プロセス: 0個"
                           Margin="0,5,0,0"
                           FontSize="10"
                           Foreground="#FF666666"/>
            </StackPanel>
        </GroupBox>

        <!-- ボタン -->
        <StackPanel Grid.Row="7"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,20">
            <Button Content="閉じる"
                    Click="Close_Click"
                    Width="80"
                    Height="25"
                    Style="{StaticResource ModernButton}"/>
        </StackPanel>
    </Grid>
</Window>

